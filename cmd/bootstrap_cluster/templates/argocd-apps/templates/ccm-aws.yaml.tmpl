apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ccm-aws
  namespace: argo-cd

spec:
  destination:
    namespace: kube-system
    server: https://kubernetes.default.svc
  project: default
  sources:
    - repoURL: {{ .KubeaidForkURL }}
      path: argocd-helm-charts/ccm-aws
      targetRevision: HEAD
      helm:
        valueFiles:
          - $values/k8s/{{ .ClusterName }}/argocd-apps/ccm-aws.values.yaml
    - repoURL: {{ .KubeaidConfigForkURL }}
      targetRevision: HEAD
      ref: values
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
