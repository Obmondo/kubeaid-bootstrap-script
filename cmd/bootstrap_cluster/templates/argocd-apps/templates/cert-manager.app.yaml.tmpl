apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cert-manager
  namespace: argo-cd

spec:
  destination:
    namespace: cert-manager
    server: https://kubernetes.default.svc
  project: default
  sources:
    - repoURL: {{ .KubeaidForkURL }}
      path: argocd-helm-charts/cert-manager
      targetRevision: HEAD
      helm:
        valueFiles:
          - $values/k8s/{{ .ClusterName }}/argocd-apps/cert-manager.values.yaml
    - repoURL: {{ .KubeaidConfigForkURL }}
      targetRevision: HEAD
      ref: values
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
