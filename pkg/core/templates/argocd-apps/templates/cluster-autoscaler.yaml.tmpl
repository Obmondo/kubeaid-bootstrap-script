apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    kubeaid.io/version: "{{ .KubeaidVersion }}"
    kubeaid.io/managed-by: "kubeaid"
    kubeaid.io/sync-order: "10"
  name: cluster-autoscaler
  namespace: argocd
spec:
  destination:
    namespace: cluster-autoscaler
    server: https://kubernetes.default.svc
  sources:
    - repoURL: {{ .KubeaidForkURL }}
      path: argocd-helm-charts/cluster-autoscaler
      targetRevision: {{ .KubeaidVersion }}
      helm:
        valueFiles:
          - $values/k8s/{{ .ClusterConfig.Name }}/argocd-apps/values-cluster-autoscaler.yaml
    - repoURL: {{ .KubeaidConfigForkURL }}
      targetRevision: HEAD
      ref: values
  project: kubeaid
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
